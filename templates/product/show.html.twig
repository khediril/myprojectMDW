{% extends 'mabase.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block main %}
 
  <div class="container">
   {% if produit %}
    
<h1>Fiche Produit</h1>
<table class="table table-success table-striped">
 
  <tbody>
    <tr>
      <th scope="row">ID</th>
      <td>{{produit.id}}</td>
      
    </tr>
    <tr>
      <th scope="row">Non du produit :</th>
      <td>{{produit.name}}</td>
      
    </tr>
    <tr>
      <th scope="row">Prix</th>
      
      <td>{{produit.price}}</td>
      
    </tr>
    <tr>
      <th scope="row">Categorie</th>
      
      <td></td>
    </tr>
 
    <tr>
      <th scope="row">description</th>
      
      <td>{{produit.description}}</td>
    </tr>
    
  </tbody>
</table>
{% else %}
  <div class="alert alert-danger" role="alert">
  Id produit incorrect
</div>
{% endif %}

  </div>

{% endblock %}
