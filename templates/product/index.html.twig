{% extends 'mabase.html.twig' %}

{% block title %}Hello ProductController!
{% endblock %}

{% block body %}
	
	<div class="container">
	{% for message in app.flashes('info') %}
   
	<div class="alert alert-success" role="alert">
  {{ message }}
</div>
{% endfor %}
    <h1>Liste des produits</h1>
		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Name</th>
					<th scope="col">Categorie</th>
                    <th scope="col">Details</th>
					<th scope="col">Supprimer</th>
				</tr>
			</thead>
			<tbody>


				{% for p in products %}
					<tr>
						<th scope="row">{{ p.id }}</th>
						<td>{{ p.name }}</td>
						<td>{# p.categorie.name #}</td>
                        <td><a href="{{ path("product_show",{"id":p.id})}}">Detail</a></td>
					    <td><a href="{{ path("product_delete",{"id":p.id})}}">Supprimer</a></td>
					</tr>


				{% endfor %}
			</tbody>
		</table>
	</div>


{% endblock %}
